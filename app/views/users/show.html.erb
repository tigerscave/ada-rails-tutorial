<div>
  <%= @user.name %>, <%= @user.email %>
</div>
<section class="stats">
  <%= render 'shared/stats' %>
</section>
<div class="col-md-8">
  <%= render 'follow_form' if logged_in? %>
  <% if @user.microposts.any? %>
    <%= will_paginate @microposts %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
  <% end %>
</div>